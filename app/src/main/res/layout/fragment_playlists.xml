<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".fragments.pagertab.Playlists">

    <TextView
        android:id="@+id/playlists_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:text="Crie sua primeira playlist"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playlists_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="É fácil, vamos te ajudar."
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/playlists_title"
        app:layout_constraintStart_toStartOf="@id/playlists_title"
        app:layout_constraintTop_toBottomOf="@id/playlists_title" />

</androidx.constraintlayout.widget.ConstraintLayout>